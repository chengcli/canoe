<comment>
problem   = Hot Jupiter Double Gray Test
reference = Straka et al., 1993

<job>
problem_id = shj   # problem ID: basename of output filenames
tasklist   = ImplicitHydroTasks

<output0>
file_type  = rst
dt         = 1.728E8

<output1>
file_type  = hst          # History data dump
dt         = 1.728E5      # time increment between outputs

<output2>
file_type  = pnetcdf      # Binary data dump
variable   = prim         # variables to be output
dt         = 1.728E7      # time increment between outputs

<output3>
file_type  = pnetcdf
variable   = uov
dt         = 1.728E7

<output4>
file_type  = pnetcdf
variable   = rad
dt         = 1.728E7

#<output5>
#file_type  = dbg
#dt         = 1

<time>
cfl_number = 0.9          # The Courant, Friedrichs, & Lewy (CFL) Number
nlim       = -1           # cycle limit
tlim       = 1.0368E11     # time limit
xorder     = 2            # horizontal reconstruction order
integrator = rk3          # integration method
shock_capture = true

<mesh>
nx1        = 64          # Number of zones in X1-direction
x1min      = 8.E7         # minimum value of X1
x1max      = 8.45E7       # maximum value of X1
ix1_bc     = reflecting   # inner-X1 boundary flag
ox1_bc     = reflecting   # outer-X1 boundary flag

nx2         = 48            # Number of zones in X2-direction
x2min       = 0.            # minimum value of X2
x2max       = 3.141592653589793  # maximum value of X2
ix2_bc      = polar   # Inner-X2 boundary condition flag
ox2_bc      = polar   # Outer-X2 boundary condition flag

nx3         = 96          # Number of zones in X3-direction
x3min       = 0.         # minimum value of X3
x3max       = 6.283185307179586  # maximum value of X3
ix3_bc      = periodic    # Inner-X3 boundary condition flag
ox3_bc      = periodic    # Outer-X3 boundary condition flag

ReferencePressure = 0.    # not used
PressureScaleHeight = 0.  # not used

<meshblock>
nx1        = 64
nx2        = 24
nx3        = 24

<hydro>
OmegaZ      = 2.E-5               # Rotational frequency
grav_acc1   = -23.1
gamma       = 1.4         # gamma = C_p/C_v
implicit_flag = 9

<thermodynamics>
Rd          = 3714.       # Gas constant

<astronomy>
planet        = HJ
HJ.parent     = Sun
HJ.re         = 8.E4      # km
HJ.rp         = 8.E4      # km
HJ.obliq      = 0.        # deg
HJ.spinp      = 2.218577        # day
HJ.orbit_a    = 0.03106      # au
HJ.orbit_e    = 0.
HJ.orbit_i    = 0.        # deg
HJ.orbit_p    = 2.218577        # day
HJ.grav_eq    = 23.1       # m/s^2
HJ.equinox    = 0.

<radiation>
dt            = 200.
nstr          = 4
radiation_config = minichem.yaml
relax_time    = 1.E4

<forcing>
packages = top_sponge_lyr, relax_bot_temp
top_sponge_lyr.tau     = 1.E4
top_sponge_lyr.width   = 6.E5
relax_bot_temp.tem     = 2500.
relax_bot_temp.tau     = 1.E3
#bot_heating.flux       = 850.91056

<problem>
Omega      = 0.
Ts         = 2500.            # Surface temperature, K
Ps         = 2.E7             # Surface pressure, Pa
Tmin       = 1400.
radius     = 8.E7
