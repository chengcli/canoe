<comment>
problem   = Jupiter 3d global model

<job>
problem_id  = 3djup  # problem ID: basename of output filenames
tasklist  = ImplicitHydroTasks

<output0>
file_type   = rst
dt          = 1.E5

<output1>
file_type   = hst
dt          = 5.E3

<output2>
file_type   = pnetcdf     # Tabular data dump
variable    = prim        # variables to be output
dt          = 5.E2        # time increment between outputs

<output3>
file_type   = pnetcdf
variable    = uov
dt          = 5.E2

<output4>
file_type   = pnetcdf
variable    = rad
dt          = 5.E2

<time>
cfl_number  = 0.9          # The Courant, Friedrichs, & Lewy (CFL) Number
nlim        = -1          # cycle limit
xorder      = 5
integrator  = rk3
tlim        = 1.E4       # time limit
shock_capture = true

<mesh>
nx1         = 100          # Number of zones in X1-direction
x1min       = 7.E7        # minimum value of X1
x1max       = 7.03E7       # maximum value of X1
ix1_bc      = reflecting  # Inner-X1 boundary condition flag
ox1_bc      = reflecting  # Outer-X1 boundary condition flag

nx2         = 30         # Number of zones in X2-direction
x2min       = 0.          # minimum value of X2
x2max       = 4.5E6       # maximum value of X2
ix2_bc      = reflecting  # Inner-X2 boundary condition flag
ox2_bc      = reflecting  # Outer-X2 boundary condition flag

nx3         = 40         # Number of zones in X3-direction
x3min       = 0.          # minimum value of X3
x3max       = 6.E6        # maximum value of X3
ix3_bc      = periodic    # Inner-X3 boundary condition flag
ox3_bc      = periodic    # Outer-X3 boundary condition flag

<meshblock>
nx1         = 100
nx2         = 10
nx3         = 20

<hydro>
gamma           = 1.42    # gamma = C_p/C_v
grav_acc1       = -24.79
implicit_flag   = 9

<species>
vapor = H2O, NH3, NH4SH
cloud = H2O(c), NH3(c), NH4SH(c), H2O(p), NH3(p), NH4SH(p)

<thermodynamics>
Rd          = 3777.
eps1        = 8.18    8.18    8.18
beta1       = 0.      24.85   24.85
rcp1        = 0.15    0.15    0.15
Ttriple1    = 273.16
Ptriple1    = 611.7

eps2        = 7.72    7.72    7.72
rcp2        = 0.08    0.08    0.08
beta2       = 0.      23.67   23.67
Ttriple2    = 195.4
Ptriple2    = 6060.

eps3        = 22.7    22.7    22.7
rcp3        = 0.06    0.06    0.06
beta3       = 0.      70.14   70.14
Ttriple3    = 250.
Ptriple3    = 36.94

sa.relax    = 1.0
sa.max_iter = 4
sa.ftol     = 0.1

<chemistry>
microphysics_config = h2o-nh3-nh4sh.yaml

<astronomy>
planet        = HJ
HJ.parent     = Sun
HJ.re         = 1.E5      # km
HJ.rp         = 1.E5      # km
HJ.obliq      = 0.        # deg
HJ.spinp      = 0.42      # day
HJ.orbit_a    = 5.2038    # au
HJ.orbit_e    = 0.
HJ.orbit_i    = 0.        # deg
HJ.orbit_p    = 4380.        # day
HJ.grav_eq    = 25.       # m/s^2
HJ.equinox    = 0.

#Sun.spec_file = ../src/radiation/spectra/sun.spec

<radiation>
dt            = 100.
radiation_config = rt_jup3cld.yaml
nstr          = 4
relax_time    = 1.E4

<forcing>
packages = top_sponge_lyr, relax_bot_temp
top_sponge_lyr.tau     = 1.E3
top_sponge_lyr.width   = 5.E4
relax_bot_temp.tem     = 535.
relax_bot_temp.tau     = 1.E3

<problem>
qH2O.ppmv   = 2824.
qNH3.ppmv   = 350.
qNH4SH.ppmv = 92.5
P0          = 5.E6
T0          = 535.
Tmin        = 110.
radius      = 7.E7
Omega       = 0.
Omega_f     = 1.76E-4
beta_f      = 4.92E-12
center_deg  = 20.
init_Ttol   = 2.
diagnostics = div, curl, b, mean, anomaly, radflux, hydroflux, w_avg
