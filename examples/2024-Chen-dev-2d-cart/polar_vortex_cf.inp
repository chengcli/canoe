<comment>
problem   = One layer shallow water model at the pole
reference =
configure = --prob=polar_vortex --eos=shallow_water --nghost=3 -mpi -pnetcdf --pnetcdf_path=${HOME}/opt --include=src/tools/

<job>
problem_id = intruder # problem ID: basename of output filenames
tasklist   = TimeIntegratorTaskList

<output0>
file_type  = hst          # History data dump
dt         = 1.E6         # time increment between outputs

<output1>
file_type  = rst          # restart dump
dt         = 5.E6

<output2>
file_type  = pnetcdf      # netcdf data dump
variable   = prim         # variables to be output
dt         = 1.E5         # time increment between outputs

<output3>
file_type  = pnetcdf      # netcdf data dump
variable   = uov          # variables to be output
dt         = 1.E5         # time increment between outputs

<time>
cfl_number = 0.8          # The Courant, Friedrichs, & Lewy (CFL) Number
nlim       = -1           # cycle limit
tlim       = 1.72E7         # time limit
xorder     = 5            # horizontal reconstruction order
integrator = rk3          # integration method

<mesh>
nx1        = 1024          # Number of zones in X1-direction (longitude)
x1min      = -7E7       # minimum value of X1
x1max      = 7E7        # maximum value of X1, 120 degree
ix1_bc     = periodic     # inner-X1 boundary flag
ox1_bc     = periodic     # inner-X1 boundary flag

nx2        = 1024          # Number of zones in X2-direction (latitude)
x2min      = -7E7       # minimum value of X2
x2max      = 7E7        # maximum value of X2, 70 degree
ix2_bc     = periodic     # inner-X2 boundary flag
ox2_bc     = periodic     # inner-X2 boundary flag

nx3        = 1            # Number of zones in X3-direction (height)
x3min      = 0.           # minimum value of X3
x3max      = 1.           # maximum value of X3
ix3_bc     = periodic     # inner-X3 boundary flag
ox3_bc     = periodic     # inner-X3 boundary flag

<hydro>
gamma      = 1.4

<meshblock>
nx1       = 128
nx2       = 128
nx3       = 1

<problem>

vis = 0.

phi0    = 1.E7
dphi    = 10.
omega   = 1.74E-4
Li      = 3.E6
M       = 15
max_freq = 6.28 # Angular frequency
radius  = 7.14E7
change_tau = 1.E5
sponge_lat = 50.
sponge_tau = 2.5E2
lambda  = 3.E6
alpha   = 2
phi1    = -5.E5
cool_tau= 1.E7
